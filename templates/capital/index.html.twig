{% extends 'base.html.twig' %}

{% block title %}Hello CapitalController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h5 style="text-align: center">"CIELO AZUL" S.A DE C.V.</h5>
    <h5 style="text-align: center">ESTADO DE CAPITAL {{ "now"|date("m/d/Y") }}</h5>
    <h5 style="text-align: center">(Expresado en dólares de los Estados Unidos de América)</h5>
    <br>
    <table class="table">
            <tr>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        {% for capitalito in capital %}
            <tr>
                <td>{{ capitalito.nombre }}</td>
                <td>{{ capitalito.debe }}</td>
                <td>{{ (-1)*capitalito.haber }}</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="2">TOTAL</td>
            <td>{{ saldo }}</td>
        </tr>
    </table>
</div>
{% endblock %}
